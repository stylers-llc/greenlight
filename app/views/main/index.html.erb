<div class="background" id="home-header">
  <div class="container pt-1 pb-1">
    <div class="row">
      <div class="col-md-6 col-sm-12">
        <%= image_tag("header.png") %>
      </div>
      <div class="col-md-6 col-sm-12 text-center pt-8">
        <h1 id="main-text" class="display-4 mb-4"> <%= t("landing.welcome").html_safe %></h1>
        <h2 id="main-sub-text" class="display-4 mb-4"> <%= t("landing.welcome_sub").html_safe %></h1>
        <p class="lead offset-lg-2 col-lg-8 col-sm-12 "><%= t("landing.about").html_safe %></p>
      </div>
    </div>
  </div>
</div>

<div class="container mt-8 mb-6 text-center">

  <h2 class="mb-6"><%= t("suggested-for.title") %></h2>

    <div id="indexCarousel" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
            <h3><%= t("suggested-for.agile.title") %></h3>
            <p><%= t("suggested-for.agile.description") %></p>
        </div>
        <div class="carousel-item">
            <h3><%= t("suggested-for.trainings.title") %></h3>
            <p><%= t("suggested-for.trainings.description") %></p>
        </div>
        <div class="carousel-item">
            <h3><%= t("suggested-for.meetings.title") %></h3>
            <p><%= t("suggested-for.meetings.description") %></p>
        </div>
        <div class="carousel-item">
            <h3><%= t("suggested-for.courses.title") %></h3>
            <p><%= t("suggested-for.courses.description") %></p>
        </div>
      </div>
        <a class="carousel-control-prev" href="#indexCarousel" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only"></span>
        </a>
        <a class="carousel-control-next" href="#indexCarousel" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only"></span>
        </a>
    </div>

</div>

<%= render "main/components/features" %>
